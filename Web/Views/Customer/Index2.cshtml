@model List<DatabaseContext.Models.Customer>
@*
@{ 
    ViewData["title"] = "Index";
}*@

<div id="msg" class="row my-2">
    <p>
        @TempData["Message"]
    </p>
</div>
<div class="row my-3">
    <div class="col-4">
        <a class="btn btn-primary" href="@Url.Action("Create","Customer")">Create Customer</a>
    </div>
    <div class="col-4">
        <input type="text" class="form-control text-success" placeholder="Search..." onkeyup="search(this.value)" />
    </div>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
             <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn  btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-warning" onclick="get()">Get Customers</button>

<div id="modal-container">

</div>
@section Scripts {
    <script>
        function get() {
            let i = 10;
            let string = `${i}`;
            $.ajax({
                url: '@Url.Action("GetCustomers", "Customer")',
                type: 'GET',
                dataType: 'json',
                beforeSend: function() {
                    let timerInterval
                    Swal.fire({
                      title: 'Loading...',
                      //html: 'I will close in <b></b> milliseconds.',
                      timer: 1000,
                      timerProgressBar: true,
                      didOpen: () => {
                        Swal.showLoading()
                        const b = Swal.getHtmlContainer().querySelector('b')
                        timerInterval = setInterval(() => {
                          b.textContent = Swal.getTimerLeft()
                        }, 100)
                      },
                      willClose: () => {
                        clearInterval(timerInterval)
                      }
                    }).then((result) => {
                      if (result.dismiss === Swal.DismissReason.timer) {
                        console.log('I was closed by the timer')
                      }
                    });
                },
                success: function(response) {
                    if (response.success) {
                        $.each(response.data, (index, item) => {
                            $('tbody').append(` <tr>
                                                    <td>${item.id}</td>
                                                    <td>${item.name}</td>
                                                    <td>
                                                        <button class="btn btn-warning" onclick="showModal('${item.id}')">Edit</button>
                                                        <button class="btn btn-danger">Delete</button>
                                                    </td>
                                                </tr>`)
                        })
                    }
                    else {
                        alert(response.message)
                    }
                },
                error: function(msg) {
                    console.error(msg);
                }
            })
        }
    </script>
    <script>
        function search(val) {
            $.ajax({
                url: '@Url.Action("Search", "Customer")' + '?value=' + val,
                type: 'GET',
                dataType: 'json',
                beforeSend: function() {
                    $('tbody').html('')
                },
                success: function(response) {
                    if (response.success) {
                        $.each(response.data, (index, item) => {
                            $('tbody').append(` <tr>
                                                    <td>${item.id}</td>
                                                    <td>${item.name}</td>
                                                    <td>
                                                        <button class="btn btn-warning" onclick="showModal('${item.id}')">Edit</button>
                                                        <button class="btn btn-danger">Delete</button>
                                                    </td>
                                                </tr>`)
                        })
                    }
                    else {
                        alert(response.message)
                    }
                },
                error: function(msg) {
                    console.error(msg);
                }
            })
        }
    </script>
    <script>
        function showModal(id) {
            alert(id);
            $.ajax({
                url: '@Url.Action("GetModal", "Customer")' + "?id=" + parseInt(id),
                type: 'GET',
                dataType: 'html',
                success: function(response) {
                    $('#modal-container').html(response); 
                    $('.modal').modal('show');
                    $.validator.unobtrusive.parse('form-id');
                },
                error: function(msg) {
                    console.error(msg);
                }
            })
        }
    </script>
}   
