@model DatabaseContext.Models.Order
@{
    ViewData["Title"] = "Details";
}

<h1>Order Details</h1>

<div>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <dl class="row">
        <dt class="col-sm-2">
            Products:
        </dt>
        <dd class="col-sm-10">
            <ul id="productsList"></ul>
            <button id="loadProductsButton">Load Products</button>
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
    <table>

            <thead>
        <tr>
            
            <th>Products</th>
            <th>Price</th>
            <th>Quantity</th>
            
        </tr>
    </thead>

        <tbody>

        @for (var i = 0; i< ViewBag.prods.Count; i++)
        {          
            <tr>
            <td>@ViewBag.prods[i].Name</td>
            <td>@ViewBag.prods[i].Price</td>
            <td>@ViewBag.quans[i]</td>
            </tr>
        }
  
        </tbody>
    </table>
    @*<button  class="btn btn-warn" onclick="get()">Get Prods</button>*@
    
    <!-- Add other order details here -->

    <a asp-action="Index">Back to List</a>
</div>

